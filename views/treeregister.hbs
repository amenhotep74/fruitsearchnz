<!-- Table -->
<div class="container-fluid mt-3">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        {{#if nodata}}
                            <h2>{{nodata}}</h2>
                        {{else}}
                            <h2><b>Tree Register</b></h2>
                        {{/if}}
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tree ID</th>
                        <th>Variety Name</th>
                        <th>Age</th>
                        <th>Height</th>
                        <th>Trunk Diameter</th>
                        <th>Root Stock</th>
                        <th>Public</th>
                        <th>Synonyms</th>
                        <th>Identity Certain</th>
                        <th>Maintained/Neglected</th>
                        <th>Notes</th>
                        <th>Diseases</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Blossom Date</th>
                        <th>Fruit Ripe Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>#{{this.dataValues.plantID}}</td>
                        <td>{{this.dataValues.Variety.dataValues.name}}</td>
                        <td>{{this.dataValues.age}}</td>
                        <td>{{this.dataValues.height}}</td>
                        <td>{{this.dataValues.trunkdiameter}}</td>
                        <td>{{this.dataValues.rootstock}}</td>
                        <td>{{this.dataValues.public}}</td>
                        <td>{{this.dataValues.synonyms}}</td>
                        <td>{{this.dataValues.identitycertain}}</td>
                        <td>{{this.dataValues.maintainedneglected}}</td>
                        <td>{{this.dataValues.notes}}</td>
                        <td>{{this.dataValues.diseases}}</td>
                        <td>{{this.dataValues.gpslat}}</td>
                        <td>{{this.dataValues.gpslong}}</td>
                        <td>{{this.dataValues.BlossomDate}}</td>
                        <td>{{this.dataValues.fruitRipeDate}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>        
</div>
<!-- Table End -->