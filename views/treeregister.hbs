<div class="text-center container mt-5">
    <main class="form-signind text-center">
        {{#if msg}}
        <div class="alert alert-danger" role="alert">
            {{msg}}
        </div>
        {{else}}
        {{/if}}

        {{#if validationErrors}}
        {{#each validationErrors}}
            <div class="alert alert-danger" role="alert">
                {{this.msg}}
            </div>
        {{/each}}
        {{/if}}
        
        <form action="/tree/create" method="post">
            <h1 class="h3 mb-3 fw-normal">Register a New Tree</h1>
            <small>Location Address must be exact, not case sensitive.</small>
            <div class="row">
            <div class="col-md-6">
                <label for="locationaddress">Location Address</label>
                <input type="text" id="locationaddress" class="form-control" placeholder="Location Address" name="locationaddress">

                <label for="locationname">Location Name</label>
                <input type="text" id="locationname" class="form-control" placeholder="Name of location" name="locationname">

                <label class="mt-3" for="variety">Select Variety</label>
                <select class="form-control" id="variety" name="variety">
                    {{#each variety}}
                        <option>{{this.dataValues.name}}</option>
                    {{/each}}
                </select>

                <label for="gpslat">GPS Latitude (optional)</label>
                <input type="text" id="gpslat" class="form-control" placeholder="GPS Latitude" name="gpslat">

                <label for="gpslong">Gps Longitude (optional)</label>
                <input type="text" id="gpslong" class="form-control" placeholder="GPS Longitude" name="gpslong">
            </div>
            <div class="col-md-6">
                 <label for="notes">Notes (optional)</label>
                <input type="text" id="notes" class="form-control" placeholder="Additional Notes" name="notes">

                <label for="height">Height (in CM)</label>
                <input type="number" step="0.01" id="height" class="form-control" placeholder="height" name="height">

                <label for="diameter">Diameter (in CM)</label>
                <input type="number" step="0.01" id="diameter" class="form-control" placeholder="Diameter of tree or plant" name="diameter">

                <label for="blossomdate">Blossom Date</label>
                <input type="date" id="blossomdate" class="form-control" placeholder="Blossom Date" name="blossomdate">

                <label for="diseases">Diseases (If Any)</label>
                <input type="text" id="diseases" class="form-control" placeholder="Diseases" name="diseases">

                <label for="age">Age of tree</label>
                <input type="number" id="age" class="form-control" placeholder="Age" name="age">
            </div>
            </div>
            <button class="w-100 btn btn-lg btn-primary mt-2" type="submit">Submit</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
        </form>
    </main>