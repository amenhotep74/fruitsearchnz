    <link rel="stylesheet" href="../../assets/css/styles.css">
    <link rel="stylesheet" href="../../assets/css/signin.css">
    <link href="../public/assets/css/dashboard.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d60d3e1a74.js" crossorigin="anonymous"></script>

    <title>FruitSearchNZ</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">FruitSearchNZ.org</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/searchdb">Search Database</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Heritage Fruit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Volunteer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Research Record</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <!-- Login Register Links -->
                    {{#if user}}
                    <a class="nav-link btn btn-success mr-1" href="/addspecies">Add Species</a>
                    <a class="nav-link btn btn-success ml-1 mr-1" href="/addvariety">Add Variety</a>
                    <a class="nav-link btn btn-warning ml-1" href="/treeregister">Tree Register</a>
                        <a class="nav-link white_text">
                            <span class="">Welcome, {{username}}</span>
                        </a>
                        <a class="nav-link white_text" href="/auth/logout"><i class="fas fa-user-circle"></i> Logout</a>
                    {{else}}
                        <a class="nav-link white_text" href="/register"><i class="fas fa-user-circle"></i> Register</a>
                        <a class="nav-link white_text" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                    {{/if}}
                    {{#if isAdmin}}
                    <a class="nav-link btn btn-danger" href="/dashboard">Admin Area</a>
                    {{/if}}
                    
                </div>
            </div>
        </div>
    </nav>
    {{!-- {{#if user}}
    <p>{{id}}</p>
