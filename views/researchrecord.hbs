<div class="container p-5">
    <!-- Table -->
    <div class="container-xl mb-5">
      <div class="table-responsive">
          <div class="table-wrapper">
              <div class="table-title">
                  <div class="row">
                      <div class="col-sm-6">
                          <h2><b>Sources submited for review</b></h2>
                      </div>
                      <div class="col-sm-6">
                          <a href="/addsource" class="btn btn-success" data-toggle="modal"><i class="fas fa-plus-circle"></i> <span>Add New Source</span></a>
                      </div>
                  </div>
              </div>
              <table class="table table-striped table-hover">
                  <thead>
                      <tr>
                          <th>
                            ID
                          </th>
                          <th>Variety</th>
                          <th>Date</th>
                          <th>Source Name</th>
                          <th>Reference</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      {{#each notApprovedSources}}
                      <tr>
                          <td>{{this.dataValues.sourceID}}</td>
                          <td>{{this.dataValues.Variety.dataValues.name}}</td>
                          <td>{{this.dataValues.createdAt}}</td>
                          <td>{{this.dataValues.sourcename}}</td>
                          <td>{{this.dataValues.reference}}</td>
                          <td>
                              <a class="btn btn-success">Edit</a>
                              <a class="btn btn-danger">Delete</a>
                          </td>
                      </tr>
                      {{/each}}
                  </tbody>
              </table>
          </div>
      </div>        
  </div>

     <div class="container-xl mt-5 mb-5">
      <div class="table-responsive">
          <div class="table-wrapper">
              <div class="table-title">
                  <div class="row">
                      <div class="col-sm-6">
                          <h2><b>Reviewed Sources (All Users)</b></h2>
                      </div>
                      <div class="col-sm-6">
                      </div>
                  </div>
              </div>
              <table class="table table-striped table-hover">
                  <thead>
                      <tr>
                          <th>
                            ID
                          </th>
                          <th>Variety</th>
                          <th>Date</th>
                          <th>Source Name</th>
                          <th>Reference</th>
                      </tr>
                  </thead>
                  <tbody>
                      {{#each approvedSources}}
                      <tr>
                          <td>{{this.dataValues.sourceID}}</td>
                          <td>{{this.dataValues.Variety.dataValues.name}}</td>
                          <td>{{this.dataValues.createdAt}}</td>
                          <td>{{this.dataValues.sourcename}}</td>
                          <td>{{this.dataValues.reference}}</td>
                      </tr>
                      {{/each}}
                  </tbody>
              </table>
          </div>
      </div>        
  </div>

</div>
