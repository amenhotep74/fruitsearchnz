<h1 class="text-center mt-3">Add Variety</h1>
<div class="container">

    {{#if msg}}
        <div class="alert alert-danger" role="alert">
            {{msg}}
        </div>
        {{else}}
    {{/if}}

    {{#if validationErrors}}
        {{#each validationErrors}}
            <div class="alert alert-danger" role="alert">
                {{this.msg}}
            </div>
        {{/each}}
    {{/if}}

    <form action="/variety/create" method="post">
    <div class="form-group w-50">
        <label class="mt-3" for="name">Name Of Variety</label>
        <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="e.g. Green Apple" required>

        <label class="mt-3" for="species">Select Species</label>
            <select class="form-control" id="species" name="species" required>
                {{#each species}}
                    <option value="{{this.dataValues.name}}">{{this.dataValues.name}}</option>
                {{/each}}
        </select>

        <label class="mt-3" for="characteristics">Characteristics</label>
        <textarea type="text" class="form-control" id="characteristics"  name="characteristics"  aria-describedby="emailHelp"  rows="6" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>