<div class="text-center container mt-5 mb-5">
    <main class="form-signind text-center">
        {{#if msg}}
        <div class="alert alert-danger" role="alert">
            {{msg}}
        </div>
        {{else}}
        {{/if}}

        {{#if validationErrors}}
        {{#each validationErrors}}
            <div class="alert alert-danger" role="alert">
                {{this.msg}}
            </div>
        {{/each}}
        {{/if}}
        
        <form action="/tree/create" method="post">
            <h1 class="h3 mb-3 fw-normal">Register a New Tree</h1>
            <small>Location Address must be exact, is not case sensitive.</small>
            <div class="row">
            <div class="col-md-6 mt-2">
                <label for="locationaddress">Location Address</label>
                <input type="text" id="locationaddress" class="form-control mb-1" placeholder="Location Address" name="locationaddress">

                <label for="locationname">Location Name</label>
                <input type="text" id="locationname" class="form-control mb-1" placeholder="Name of location" name="locationname">

                <label class="mt-3" for="variety">Select Variety</label>
                <select class="form-control mb-1" id="variety" name="variety">
                    {{#each variety}}
                        <option>{{this.dataValues.name}}</option>
                    {{/each}}
                </select>

                <label for="gpslat">GPS Latitude (optional)</label>
                <input type="text" id="gpslat" class="form-control mb-1" placeholder="GPS Latitude" name="gpslat">

                <label for="gpslong">GPS Longitude (optional)</label>
                <input type="text" id="gpslong" class="form-control mb-1" placeholder="GPS Longitude" name="gpslong">

                <label for="type">Type</label>
                <input type="text" id="type" class="form-control mb-1" placeholder="Type" name="type">

                <label for="rootstock">Rootstock</label>
                <input type="text" id="rootstock" class="form-control mb-1" placeholder="Rootstock" name="rootstock">

                <label for="synonyms">Synonyms</label>
                <input type="text" id="synonyms" class="form-control mb-1" placeholder="synonyms" name="synonyms">

                <label class="mt-3" for="identitycertain">Identity Certain</label>
                <select class="form-control mb-1" id="identitycertain" name="identitycertain">
                    <option>Yes</option>
                    <option>Unsure</option>
                </select>

            </div>
            <div class="col-md-6">
                 <label for="notes">Notes (optional)</label>
                <input type="text" id="notes" class="form-control mb-1" placeholder="Additional Notes" name="notes">

                <label for="height">Height (in CM)</label>
                <input type="number" step="0.01" id="height" class="form-control mb-1" placeholder="Height" name="height">

                <label for="diameter">Diameter (in CM)</label>
                <input type="number" step="0.01" id="diameter" class="form-control mb-1" placeholder="Diameter of tree or plant" name="diameter">

                <label for="diseases">Diseases (If Any)</label>
                <input type="text" id="diseases" class="form-control mb-1" placeholder="Diseases" name="diseases">

                <label for="age">Age of tree</label>
                <input type="number" id="age" class="form-control mb-1" placeholder="Age" name="age">

                <label for="age">Blossom Date</label>
                <input type="date" id="blossomdate" class="form-control mb-1" placeholder="blossomdate" name="blossomdate">

                <label for="age">Fruit Ripe Date</label>
                <input type="date" id="fruitripedate" class="form-control mb-1" placeholder="Fruit Ripe Date" name="fruitripedate">

                <label class="mt-3" for="variety">Public</label>
                <select class="form-control mb-1" id="public" name="public">
                    <option>Yes</option>
                    <option>No</option>
                </select>

                <label class="mt-3" for="maintainedneglected">Maintained Or Neglected</label>
                <select class="form-control mb-1" id="maintainedneglected" name="maintainedneglected">
                    <option>Maintained</option>
                    <option>Neglected</option>
                </select>

            </div>
            </div>
            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Submit</button>
        </form>
    </main>
    </div>