<div class="text-center m-5">
    <main class="form-signin ">
        <div class="alert alert-success" role="alert">
            Account Created!
        </div>
        <div class="alert alert-danger" role="alert">
            An Error has occured.
        </div>
        <form action="/users" method="post">
            <h1 class="h3 mb-3 fw-normal">Register Account</h1>
            <label for="email" class="visually-hidden">Email address</label>
            <input type="email" id="email" class="form-control" placeholder="Email address" name="email" required
                autofocus>
            <label for="password" class="visually-hidden">Password</label>
            <input type="password" id="password" class="form-control" placeholder="Password" name="password" required>
            <label for="password2" class="visually-hidden">Confirm Password</label>
            <input type="password" id="password2" class="form-control" placeholder="Confirm Password" name="password2"
                required>
            <label for="inputName" class="visually-hidden">Name</label>
            <input type="text" id="name" class="form-control" placeholder="Name" name="name" required>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
        </form>
    </main>